<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="hint" format="string"/>

    <declare-styleable name="Pinview">
        <attr name="pinBackground" format="reference"/>
        <attr name="pinLength" format="integer"/>
        <attr name="pinWidth" format="dimension"/>
        <attr name="pinHeight" format="dimension"/>
        <attr name="splitWidth" format="dimension"/>
        <attr name="cursorVisible" format="boolean"/>
        <attr name="password" format="boolean"/>
        <attr name="forceKeyboard" format ="boolean"/>
        <attr name="inputType"/>
        <attr name="hint"/>

    </declare-styleable>
    <attr name="inputType" format="enum">
        <enum name="text" value="0"/>
        <enum name="number" value="1"/>
    </attr>


    <declare-styleable name="OtpView">
        <attr name="android:inputType"/>
        <attr name="android:textColor"/>
        <attr format="color" name="text_background_color"/>
        <attr format="string" name="otp"/>
        <attr format="integer" name="length"/>
        <attr format="dimension" name="width"/>
        <attr format="dimension" name="height"/>
        <attr format="dimension" name="space"/>
        <attr format="dimension" name="space_left"/>
        <attr format="dimension" name="space_right"/>
        <attr format="dimension" name="space_top"/>
        <attr format="dimension" name="space_bottom"/>
        <attr format="color" name="hint_color"/>
        <attr name="hint"/>
    </declare-styleable>


    <!-- ============================ Creadin Card View  ===============================-->

    <declare-styleable name="CreditCardView">
        <attr name="cardNumber" format="string" />
        <attr name="cardNumberTextColor" format="color" />
        <attr name="cardNumberFormat" format="enum">
            <enum name="all_digits" value="0" />
            <enum name="masked_all_but_last_four" value="1" />
            <enum name="only_last_four" value="2" />
            <enum name="masked_all" value="3" />
        </attr>

        <attr name="cardName" format="string" />
        <attr name="cardNameTextColor" format="color" />

        <attr name="type" format="enum">
            <enum name="visa" value="0" />
            <enum name="mastercard" value="1" />
            <enum name="american_express" value="2" />
            <enum name="discover" value="3" />
            <enum name="auto" value="4" />
            <enum name="none" value="5" />
        </attr>

        <attr name="expiryDate" format="string" />
        <attr name="expiryDateTextColor" format="color" />

        <attr name="brandLogo" format="reference" />
        <!--<attr name="brandLogoPosition" format="enum" >
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>-->

        <attr name="putChip" format="boolean" />

        <attr name="isEditable" format="boolean" />
        <attr name="isCardNumberEditable" format="boolean" />
        <attr name="isCardNameEditable" format="boolean" />
        <attr name="isExpiryDateEditable" format="boolean" />
        <attr name="isCvvEditable" format="boolean" />

        <attr name="validTillTextColor" format="color" />
        <attr name="hintTextColor" format="color" />
        <attr name="isFlippable" format="boolean"/>

        <attr name="cvv" format="string"/>
        <attr name="cvvTextColor" format="color" />
        <attr name="cardBackBackground" format="reference" />
        <attr name="fontPath" format="string" />
    </declare-styleable>


    <!--==========================Gaugeview Attr================================-->

    <declare-styleable name="kdgaugeview">
        <attr name="maxSpeed" format="float" />
        <attr name="minSpeed" format="float" />
        <attr name="speed" format="float" />
        <attr name="speed_limit" format="float" />
        <attr name="animationTime" format="integer" />
        <attr name="unitOfMeasurement" format="string" />
        <attr name="speedTextSize" format="dimension" />
        <attr name="unitOfMeasurementTextSize" format="dimension" />
        <attr name="speedLimitTextSize" format="dimension" />
        <attr name="speedDialRingWidth" format="dimension" />
        <attr name="speedDialRingInnerPadding" format="dimension" />
        <attr name="dialActiveColor" format="color" />
        <attr name="dialInactiveColor" format="color" />
        <attr name="dialSpeedColor" format="color" />
        <attr name="dialSpeedAlertColor" format="color" />
        <attr name="subDivisionCircleColor" format="color" />
        <attr name="divisionCircleColor" format="color" />
        <attr name="speedTextColor" format="color" />
        <attr name="unitOfMeasurementTextColor" format="color" />
        <attr name="speedLimitTextColor" format="color" />

    </declare-styleable>

    <!--========================== Rings View ==============================-->
    <declare-styleable name="Rings">
        <attr name="rings_text_size" format="dimension" />
        <attr name="rings_text_margin_left" format="dimension" />
        <attr name="rings_inner_stroke_width" format="dimension" />
        <attr name="rings_inner_stroke_width_unfinished" format="dimension" />
        <attr name="rings_outer_stroke_width" format="dimension" />
        <attr name="rings_outer_stroke_width_unfinished" format="dimension" />

        <attr name="rings_unfinished_color" format="color" />
        <attr name="rings_default_filled_color" format="color" />

        <attr name="rings_inner_first_color" format="color" />
        <attr name="rings_inner_second_color" format="color" />
        <attr name="rings_inner_third_color" format="color" />
        <attr name="rings_overall_color" format="color" />

        <attr name="rings_inner_first_progress" format="float" />
        <attr name="rings_inner_second_progress" format="float" />
        <attr name="rings_inner_third_progress" format="float" />
        <attr name="rings_overall_progress" format="float" />

        <attr name="rings_inner_first_text" format="string" />
        <attr name="rings_inner_second_text" format="string" />
        <attr name="rings_inner_third_text" format="string" />
        <attr name="rings_overall_text" format="string" />

    </declare-styleable>

</resources>